{
  "name": "generator-phaser-alternative",
  "version": "0.0.0",
  "description": "A minimalist phaser project template!",
  "main": "main.js",
  "keywords": [
    "phaser"
  ],
  "author": "Paul McMonagle <mcmonagle.paul@gmail.com> (http://github.com/pmcmonagle)",
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
    "beefy":      "^2.1.3",
    "browserify": "^8.1.3",
    "jshint":     "^2.6.0",
    "mocha":      "^2.1.0",
    "rimraf":     "^2.2.8"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "lint":  "jshint src/**/*.js",
    "test":  "mocha tests/",

    "build:html":   "cp src/index.html dist/index.html",
    "build:assets": "cp -r assets dist",
    "prebuild:js":  "npm run lint",
    "build:js":     "browserify src/main.js > dist/main.min.js",
    "prebuild":     "npm run clean",
    "build":        "npm run build:html && npm run build:assets && npm run build:js",

    "start": "beefy src/main.js:main.min.js --live --open --index=src/index.html"
  }
}
