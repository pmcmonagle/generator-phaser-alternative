{
  "name":        "<%= _.slugify(projectName) %>",
  "version":     "0.0.0",
  "description": "",
  "author":      "",

  "dependencies": {
    "browserify": "^8.1.3"
  },

  "devDependencies": {
    "http-server": "^0.7.4",
    "jshint": "^2.6.0",
    "live-reload": "^0.2.0",
    "mocha": "^2.1.0",
    "nodemon": "latest",
    "parallelshell": "^1.0.4",
    "rimraf": "^2.2.8"
  },

  "scripts": {
    "clean": "rimraf dist/*",
    "lint":  "jshint src/**/*.js",
    "test":  "mocha tests/",

    "build:html":   "cp src/index.html dist/index.html",
    "build:assets": "cp -r assets dist",
    "prebuild:js":  "npm run lint",
    "build:js":     "browserify src/main.js > dist/main.min.js",
    "prebuild":     "npm run clean",
    "build":        "npm run build:html && npm run build:assets && npm run build:js",

    "watch":       "nodemon -q -w src/ -w assets/ --ext '.' --exec 'npm run build'",
    "live-reload": "live-reload --port 9091 dist/",
    "server":      "http-server -p 9090 dist/",

    "dev": "parallelshell 'npm run watch -s' 'npm run live-reload -s' 'npm run server -s'"
  }
}
