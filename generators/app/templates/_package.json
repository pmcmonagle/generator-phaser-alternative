{
  "name":        "<%= _.slugify(projectName) %>",
  "version":     "0.0.0",
  "description": "A minimalist phaser project template!",
  "main":        "main.js",
  "author":      "",
  "license":     "",
  "keywords": [
    "phaser"
  ],

  "dependencies": {
  },

  "devDependencies": {
    "beefy":      "^2.1.3",
    "browserify": "^8.1.3",
    "jscs":       "^1.13.1",
    "jshint":     "^2.6.0",
    "mocha":      "^2.1.0",
    "ncp":        "^1.0.1",
    "rimraf":     "^2.2.8",
    "uglify-js":  "^2.4.16"
  },

  "scripts": {
    "clean":    "rimraf dist/*",
    "jscs":     "jscs src/**/*.js || true",
    "lint":     "jshint src/**/*.js",
    "postlint": "npm run jscs",
    "test":     "mocha tests/",

    "build:html":   "ncp src/index.html dist/index.html",
    "build:assets": "ncp assets dist/assets",
    "prebuild:js":  "npm run lint",
    "build:js":     "browserify src/main.js | uglifyjs > dist/main.min.js",
    "prebuild":     "npm run clean",
    "build":        "npm run build:html && npm run build:assets && npm run build:js",

    "start": "beefy src/main.js:main.min.js --live --open --index=src/index.html"
  }
}
